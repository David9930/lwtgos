---
import Layout from '../layouts/Layout.astro';
---

<Layout title="About the Writer">
	<main>
		<h1>About the Writer</h1>
		<div class="bio-container">
			<div class="profile">
				<img src="/writer-photo.jpg" alt="Writer's photo" class="profile-img" />
				<h2>Writer Name</h2>
				<p class="title">Television Writer & Creator</p>
			</div>
			<div class="bio">
				<h3>Biography</h3>
				<p>Writer's detailed biography and background information goes here...</p>
				
				<h3>Previous Works</h3>
				<ul>
					<li>Show Title (Year) - Role</li>
					<li>Show Title (Year) - Role</li>
				</ul>
			</div>
		</div>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 2rem;
		max-width: 1000px;
		color: white;
	}
	h1 {
		font-size: 2.5rem;
		text-align: center;
		margin-bottom: 2rem;
	}
	.bio-container {
		display: grid;
		grid-template-columns: 300px 1fr;
		gap: 2rem;
		background: rgba(255, 255, 255, 0.1);
		padding: 2rem;
		border-radius: 8px;
	}
	.profile {
		text-align: center;
	}
	.profile-img {
		width: 200px;
		height: 200px;
		border-radius: 50%;
		margin-bottom: 1rem;
	}
	.title {
		color: #888;
		margin-bottom: 1rem;
	}
	.bio h3 {
		margin-top: 1.5rem;
		margin-bottom: 1rem;
		color: #64b3f4;
	}
	ul {
		list-style: none;
		padding: 0;
	}
	li {
		margin-bottom: 0.5rem;
	}
	@media (max-width: 768px) {
		.bio-container {
			grid-template-columns: 1fr;
		}
	}
</style>