---
const currentPath = Astro.url.pathname;
---

<nav class="navigation">
	<a href="/" class="home-link">Living with the Ghost of Sam</a>
	<div class="nav-links">
		<a href="/scripts" class={currentPath === '/scripts' ? 'active' : ''}>Scripts</a>
		<a href="/documents" class={currentPath === '/documents' ? 'active' : ''}>Documents</a>
		<a href="/bible" class={currentPath === '/bible' ? 'active' : ''}>Character Bible</a>
		<a href="/sam" class={currentPath === '/sam' ? 'active' : ''}>Sam's Corner</a>
		<a href="/about" class={currentPath === '/about' ? 'active' : ''}>About</a>
	</div>
</nav>

<style>
	.navigation {
		background: rgba(255, 255, 255, 0.1);
		padding: 1rem 2rem;
		margin-bottom: 2rem;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}
	.home-link {
		color: #64b3f4;
		text-decoration: none;
		font-weight: bold;
		font-size: 1.2rem;
		transition: color 0.2s;
	}
	.home-link:hover {
		color: #c2e59c;
	}
	.nav-links {
		display: flex;
		gap: 1.5rem;
	}
	.nav-links a {
		color: white;
		text-decoration: none;
		opacity: 0.8;
		transition: opacity 0.2s;
	}
	.nav-links a:hover {
		opacity: 1;
	}
	.nav-links a.active {
		color: #64b3f4;
		opacity: 1;
	}
	@media (max-width: 600px) {
		.navigation {
			flex-direction: column;
			gap: 1rem;
			text-align: center;
		}
		.nav-links {
			flex-direction: column;
			gap: 0.5rem;
		}
	}
</style>